<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/categories/form.css">
    <title>Blog Unicesumar - Lista de Categorias</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="td">Blog Unicesumar</h1>
        <table class="table table-striped">
            


            <thead>
                <tr class="post" class=" " >
                    <th >#</th>
                    <th >POST</th>
                    <th >Descrição</th>
                    <th >Ações</th>
                </tr>
            </thead>
            <tbody class="post" >
                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td ><%= category.id %></td>
                            <td  ><%= category.name %></td>
                            <td  ><%= category.descricao %></td>
                          
                            <td >
                              
                                <button class="read-more"> Editar </button>
                                <form action="/categories/delete/<%= category.id %>" method="post">
                                    <button class="read-more" type="submit" >Excluir</button>
                                </form>
                                <button class="read-more"> Ler mais </button>
                               
                            </td>
                        </tr>
                    <% }) %>

                <%} else {%>
                <tr>
                    <td colspan="4">Nenhuma categoria cadastrada</td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/categories/form" class="btn btn-primary mt-3">Adicionar</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    
</script>



</body>
</html>